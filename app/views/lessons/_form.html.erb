<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for lesson do |l| %>
      <div class="field">
        <%= l.label :name, t(".lab_name") %>
        <%= l.text_field :name, class: "form-control" %>
      </div>
      <table class="table">
        <thead>
        <tr>
          <th><%= t ".term" %></th>
          <th><%= t ".def" %></th>
          <th></th>
        </tr>
        </thead>
        <tbody class="fields">
          <%= l.fields_for :lesson_words do |lw| %>
            <%= render "lesson_word", f: lw, view_only: false %>
          <% end %>
        </tbody>
      </table>

      <%= link_to_add_term l, l.object.lesson_words.build %>

      <%= l.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
