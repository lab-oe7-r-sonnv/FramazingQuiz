<% provide :title, t(".title") %>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div id="finish_msg" class="alert alert-success finish">
      <%= t ".finish_msg" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <%= render "panel", support: @support %>
  </div>

  <div class="col-md-6">
    <div class="flashcards">
      <%= render partial: "flashcards/word", collection: @support.words %>
    </div>

    <div class="learning">
      <button id="prev" class="btn btn-primary glyphicon glyphicon-chevron-left"></button>
      <button id="show" class="btn btn-info"><%= t ".show_def" %></button>
      <button id="next" class="btn btn-primary glyphicon glyphicon-chevron-right"></button>
    </div>
  </div>
</div>
