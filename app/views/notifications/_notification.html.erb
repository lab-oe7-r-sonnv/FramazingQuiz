<% Notification.events.each do |event_noti| %>
  <% if notification.event == event_noti.event %>
    <%= t(".#{event_noti.event}_noti",
      name: notification.notifier.name,
      event: notification.event.tr("_", " "),
      asset: notification.lesson.name,
      third_person: notification.lesson.user.name,
      time: notification.created_at.strftime("%Y/%m/%d %H:%M:%S")).html_safe %>
  <% end %>
<% end %>
