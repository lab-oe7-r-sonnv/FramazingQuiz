<h2><%= t ".sign_up" %></h2>
<div class="row">
  <div class="col-md-offset-4 col-md-4">
    <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, t(".password") %>
        <%= link_to t("devise.shared.links.didnt_receive_confirm?"),
          new_confirmation_path(resource_name) %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t ".minium_char" %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",
          class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(".password_confirmation") %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off",
          class: "form-control" %>
      </div><br />

      <div class="actions">
        <%= f.submit t(".sign_up"), class: "btn btn-primary" %>
        <%= link_to t("devise.shared.links.log_in"),
          new_session_path(resource_name), class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>
